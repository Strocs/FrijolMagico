---
import { ViewTransitions } from 'astro:transitions'
import Footer from '@components/organisms/Footer.astro'
import Header from '@components/organisms/Header.astro'
import { SITE_INFO } from '@data/SITE_INFO'

interface Props {
  title?: string
  description?: string
}

const { title = SITE_INFO.title, description = SITE_INFO.description } =
  Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="lenguage" content="spanish" />
    <meta name="author" content="Frijol M치gico" />
    <meta name="audience" content="all" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={SITE_INFO.logo} />
    <meta name="generator" content={Astro.generator} />
    <title>{`Frijol M치gico | ${title}`}</title>
    <meta name="description" content={description} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://elfrijolmagico.cl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`Frijol M치gico | ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={SITE_INFO.OGImage} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="elfrijolmagico.cl" />
    <meta property="twitter:url" content="https://elfrijolmagico.cl" />
    <meta name="twitter:title" content={`Frijol M치gico | ${title}`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={SITE_INFO.OGImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Galindo&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.cdnfonts.com/css/sheiron-rodina"
      rel="stylesheet"
    />
    <link href="https://fonts.cdnfonts.com/css/kochi" rel="stylesheet" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <ViewTransitions />
  </head>
  <body
    class:list={[
      'font-sans bg-p-blue relative h-fit w-full min-h-[100dvh] text-white',
      '',
      'before:content-[""] sm:before:content-[url(/rama.webp)] before:fixed before:h-full before:-left-[28rem] lg:before:-left-[24rem] before:-top-80 before:-z-10',
      '',
      'after:content-[url(/rama.webp)] after:fixed after:h-full after:-right-[28rem] lg:after:-right-[24rem] after:-top-80 sm:after:-top-80 after:-z-20 after:-scale-x-100',
    ]}
  >
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --p-blue: #0d2a66;
        --s-pink: #fa2678;
        --s-yellow: #ffcd69;
      }

      @font-face {
        font-family: Thickedy;
        font-style: normal;
        font-display: swap;
        src: url(/fonts/ThickedyQuick.woff2) format('woff2');
      }

      body {
        background-image: url(/background.webp);
        background-position: top center;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        background-blend-mode: color;
      }
    </style>
  </body>
</html>
