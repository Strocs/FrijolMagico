---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import { getImagesByName } from "@utils/getImagesByName";

interface Props {
  artist: string;
  id: string;
  class?: string;
}

const { class: customClass, artist, id } = Astro.props;

const firstImage = getImagesByName(artist)[0];
---

<li
  class:list={[
    "swiper-slide shrink-0 w-full h-full max-w-[14rem] md:max-w-sm aspect-[9/12] relative block opacity-20 transition-opacity duration-500 cursor-grab shadow mb-4 rounded-2xl overflow-hidden border-2 border-white",
    customClass,
  ]}
>
  <Image
    src={firstImage}
    alt={`IlustraciÃ³n hecha por ${artist}`}
    class="h-full w-full object-cover aspect-auto"
    height={500}
  />
  <Link
    text={artist}
    href={"/galeria/" + id}
    class="absolute bottom-5 left-5"
  />
</li>

<style is:global>
  .swiper-slide-active {
    opacity: 1;
  }
</style>
