---
import LinkArrow from './icons/LinkArrow.astro'
const { text, href, absolute } = Astro.props
---

<a class={absolute ? 'absolute' : ''} href={href}>
	<p>{text}</p>
	<LinkArrow />
</a>

<style>
	a {
		color: white;
		text-decoration: none;
		border-radius: 5rem;
		width: fit-content;
		padding: 0.8rem 1.4rem;
		background-color: var(--pink);
		flex-shrink: 0;
	}
	p {
		display: inline-block;
		margin: 0;
		font-size: 1.2rem;
	}

	.absolute {
		position: absolute;
		bottom: 1rem;
		left: 1rem;
	}

	@media (min-width: 640px) {
		a {
			padding: 1rem 2.4rem;
			transition: transform 200ms ease;
		}
		p {
			font-size: 1.6rem;
		}

		.absolute {
			bottom: 2rem;
			left: 2rem;
		}

		a:hover {
			transform: scale(1.1);
		}
	}
</style>
