---
import type { HTMLAttributes, HTMLTag } from 'astro/types'

interface Props extends HTMLAttributes<HTMLTag> {
  tag?: HTMLTag
  class?: string
  href?: string
  id?: string
  withHover?: boolean
}

const {
  class: customClass,
  tag: Element = 'div',
  withHover,
  href,
  id,
} = Astro.props

const hover =
  withHover || Element === 'a'
    ? 'hover:-translate-x-2 hover:translate-y-2 hover:shadow-none hover:shadow-s-pink transition-[transform_shadow] duration-150'
    : ''
---

<Element
  class:list={[
    'relative block shadow rounded-2xl overflow-hidden',
    hover,
    customClass,
  ]}
  href={href}
  id={id}
>
  <slot />
</Element>
