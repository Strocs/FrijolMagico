---
import Card from "./Card.astro";
import { getImagesOf } from "@utils/getImagesOf";
import { ARTISTS_INFO } from "@data/ARTISTS_INFO";
import Link from "./Link.astro";
---

<!-- <section class:list=""> -->
<div
  class="swiper w-full h-full touch-pan-y mx-auto space-y-8 relative overflow-hidden block"
>
  <!-- <header
    class="flex items-end justify-end px-4 sm:px-8 gap-2 w-full max-w-5xl mx-auto"
  >
    <h2 class="text-2xl sm:text-5xl leading-none">Conoce a lxs Ilustradoxs</h2>
    <Link text={`Ir a Ilustradorxs`} href="/ilustradorxs" />
  </header> -->
  <ul class="swiper-wrapper relative w-full h-full flex transition-transform">
    {
      ARTISTS_INFO.map(({ artist, id }) => (
        <Card
          class="swiper-slide shrink-0 w-full h-full max-w-[14rem] md:max-w-sm aspect-[9/12] relative block opacity-20 transition-opacity duration-500 cursor-grab shadow mb-4 rounded-2xl overflow-hidden border-2 border-white "
          artist={artist}
          id={id}
          img={getImagesOf(artist)[0]}
        />
      ))
    }
  </ul>
</div>
<!-- </section> -->

<script>
  import Swiper from "swiper/bundle";

  const swiper = new Swiper(".swiper", {
    slidesPerView: "auto",
    spaceBetween: 50,
    centeredSlides: true,
    loop: true,
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
    },
    breakpoints: {
      640: { spaceBetween: 90 },
      1260: { spaceBetween: 200 },
    },
  });
</script>
