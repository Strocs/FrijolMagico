---
import Grid from '@layouts/Grid.astro'
import GridCard from '@components/organisms/GridCard.astro'
import { SITE } from '@data/SITE'
import Spotify from '@components/icons/Spotify.astro'
import Instagram from '@components/icons/Instagram.astro'
import Facebook from '@components/icons/Facebook.astro'
---

<footer class="pb-20">
  <Grid grid="grid-cols-12 grid-rows-4">
    <GridCard
      element="a"
      href="/"
      class="bg-white sm:bg-dark-green col-span-8 row-span-2 py-4 text-center flex-col gap-2 text-yellow sm:text-white bg-[url(/enredadera.png)] sm:bg-cover bg-no-repeat sm:bg-[0_70%] bg-[80%_80%] group"
    >
      <p
        class="leading-6 text-2xl text-yellow sm:text-yellow font-black group-hover:text-[1.6rem] duration-150"
      >
        <span class="text-light-green sm:text-white font-bold">Volver al </span>
        Inicio
      </p>
    </GridCard>
    <GridCard
      element="a"
      href={SITE.podcast}
      class="bg-white sm:bg-yellow py-4 col-span-4 row-span-3 text-center flex-col gap-2 hover:gap-0 text-yellow sm:text-white"
    >
      <p
        class="leading-6 text-2xl text-yellow row-span-2 sm:text-orange font-black"
      >
        Escucha <span class="text-light-green sm:text-white font-bold"
          >nuestro</span
        > Podcast
      </p>
      <Spotify size="42" />
    </GridCard>
    <GridCard class="hidden sm:flex col-span-2 text-yellow justify-end">
      <p class="text-xl font-black text-end">Redes Sociales</p>
    </GridCard>
    <GridCard
      element="a"
      href={SITE.social_media.ig}
      class="bg-white text-light-green col-span-3 row-span-1 hover:bg-light-green hover:text-white transition duration-150 group rounded-xl"
    >
      <p class="flex gap-2 items-center">Instagram <Instagram size="28" /></p>
    </GridCard>
    <GridCard
      element="a"
      href={SITE.social_media.fb}
      class="bg-white text-orange hover:bg-orange col-span-3 row-span-1 hover:text-white transition duration-150 rounded-xl"
    >
      <p class="flex gap-2 items-center">Facebook <Facebook /></p>
    </GridCard>
    <GridCard
      class="col-span-6 row-span-1 bg-light-green text-white rounded-xl"
    >
