---
import Nav from '../molecules/Nav.astro'
import Facebook from '../icons/Facebook.astro'
import Instagram from '../icons/Instagram.astro'
import { SITE_INFO } from '@data/SITE_INFO'
import Logo from '@components/icons/Logo.astro'
import Heading1 from '@components/atoms/Heading1.astro'
---

<footer
  class="font-sans text-sm w-full h-[84vh] relative after:content-[''] overflow-hidden after:w-[300%] lg:after:w-full after:h-full after:absolute after:bottom-0 after:left-0 after:bg-p-blue after:bg-cover after:bg-bottom after:-z-20"
>
  <div class="grid content-center h-full px-4">
    <Heading1 size="sm">Frijol Mágico</Heading1>
    <div
      class="flex flex-col justify-center items-center h-full text-center gap-4 sm:gap-10"
    >
      <div
        class="flex flex-col sm:flex-row w-fit h-fit items-center justify-center gap-2 sm:gap-4 sm:justify-end"
      >
        <Nav for="footer" />
        •
        <div class="flex gap-4">
          <a
            class="hover:scale-110 transition-transform duration-150"
            href="https://www.instagram.com/festivalfrijolmagico/"
          >
            <p class="sr-only">Ir al Instagram</p>
            <Instagram /></a
          >
          <a
            class="hover:scale-110 transition-transform duration-150"
            href="https://www.facebook.com/festivalfrijolmagico"
            ><p class="sr-only">Ir al Facebook</p><Facebook /></a
          >
        </div>
      </div>
      <p class="max-w-md text-base 2xl:text-lg italic font-light">
        {SITE_INFO.description}
      </p>
      <Logo
        size="xl"
        class="mx-auto hidden tall:block hover:scale-110 hover:rotate-3 transition-transform duration-150"
      />
    </div>
    <p class="absolute bottom-4 left-0 right-0 w-full text-center px-4">
      {SITE_INFO.footer} • Hecho con ❤ por <a
        href="https://instagram.com/_strocs"
        target="_blank">Strocs</a
      >
    </p>
  </div>
</footer>

