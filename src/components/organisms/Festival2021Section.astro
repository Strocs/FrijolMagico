---
import Card from '../atoms/Card.astro'
import Section from '../molecules/Section.astro'

const daysArray = [
  { day: 'Día 1', bg: 'after:bg-[url(/dia1.webp)]' },
  { day: 'Día 2', bg: 'after:bg-[url(/dia2.webp)]' },
  { day: 'Día 3', bg: 'after:bg-[url(/dia3.webp)]' },
]
// withLink={{ text: 'Ir a Festivales', href: '/festivales' }}
---

<Section title="Revive: Festival Frijol Mágico 2021" class="!pl-0">
  <div
    class="overflow-x-scroll md:overflow-visible -mb-5 pb-5 md:-mb-0 md:pb-0 w-full pl-2 snap-x snap-mandatory"
  >
    <div class="flex w-full gap-8">
      {
        daysArray.map(({ day, bg }) => (
          <Card
            tag="a"
            href={`/festivales/XI/${day.toLowerCase().replaceAll(' ', '-')}`}
            class={`${bg} w-3/4 md:w-1/3 snap-center shrink-0 md:shrink aspect-video after:content-[''] after:bg-cover hover:after:grayscale after:transition-[filter] duration-150 after:w-full after:h-full after:absolute after:inset-0 group flex items-center after:-z-10`}
          >
            <p class="mx-auto bg-s-pink px-6 w-fit group-hover:opacity-100 lg:opacity-0 transition-opacity duration-150 py-3 font-galindo rounded-full">
              {day}
            </p>
          </Card>
        ))
      }
    </div>
  </div>
</Section>

<style>
  div::-webkit-scrollbar {
    height: 0.5rem;
    width: 0.5rem;
  }

  div::-webkit-scrollbar-thumb:horizontal {
    -webkit-border-radius: 5px;
    border-radius: 5px;
    background: var(--s-pink);
  }
</style>
