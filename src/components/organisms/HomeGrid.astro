---
import { Image } from 'astro:assets'

import Grid from '@/layouts/Grid.astro'
import GridCard from './GridCard.astro'
import { SITE } from '@/data/SITE'
import Spotify from '../icons/Spotify.astro'
import Instagram from '../icons/Instagram.astro'
import Facebook from '../icons/Facebook.astro'

import manoImage from '/public/mano.png'
import frijolImage from '/public/frijol.png'
---

<Grid class="sm:grid-cols-10 sm:grid-rows-6 grid-cols-2 grid-rows-6 h-3/4">
  <GridCard
    as="section"
    row={1}
    col={8}
    class="uppercase bg-dark-green text-white sm:bg-cover bg-no-repeat sm:bg-[0_70%] bg-[80%_80%] flex-col p-4">
    <p>19 de Octubre 2024 - Mall Vivo Coquimbo</p>
    <h2
      class="font-josefin text-xl sm:text-4xl font-black text-center tracking-widest">
      🌱 Un nuevo germinar 🌱
    </h2>
  </GridCard>

  <GridCard as="div" row={4} col={2} class="bg-light-green">
    <h2>Galería</h2>
  </GridCard>

  <GridCard
    as="a"
    row={5}
    col={2}
    href="/un-nuevo-germinar"
    class="bg-gradient-to-tr relative gap-6 from-orange to-yellow text-white px-4 py-4 sm:py-0">
    <Image
      src={manoImage}
      alt=""
      width={70}
      class="absolute top-0 rotate-180"
    />
    <h2 class="text-2xl sm:text-xl text-center leading-7">
      Conoce a lxs
      <b
        class="uppercase font-black text-2xl sm:text-3xl hidden sm:inline-block"
        >Participantes</b
      >
      del próximo festival
      <span class="block mt-2 text-4xl w-fit mx-auto">🌟🌟🌟🌟</span>
    </h2>
    <p class="uppercase text-center font-josefin text-lg leading-none">
      Ilustración <br /> Manualidades <br /> Narrativa Gráfica <br /> Música
    </p>
    <Image
      src={frijolImage}
      alt="Imágen de frijol"
      width={200}
      class="absolute -bottom-6 [transform:rotateY(180deg)]"
    />
  </GridCard>

  <GridCard
    as="section"
    row={3}
    col={6}
    class="uppercase relative overflow-hidden text-light-green sm:p-8 p-4 bg-[url(/enredadera.png)] bg-no-repeat bg-cover bg-[0_80%]">
    <video autoplay loop muted class="absolute -z-10 w-auto">
      <source src="/FestivalFrijolMagico.webm" type="video/webm" />
    </video>
    <h1
      class="text-white font-josefin text-4xl sm:text-7xl text-wrap text-center tracking-tighter leading-none">
      <span class="text-5xl">Festival</span>
      <br /> Frijol Mágico
    </h1>
  </GridCard>

  <GridCard
    as="div"
    row={2}
    col={4}
    class="col-span-4 row-span-2 bg-light-green"
  />

  <GridCard
    as="a"
    row={2}
    col={2}
    href={SITE.podcast}
    class="bg-white sm:bg-yellow py-4 flex-col gap-2 hover:gap-0">
    <p
      class="uppercase leading-6 text-3xl text-center text-yellow sm:text-orange font-black">
      Escucha <br /><span
        class="text-light-green text-2xl sm:text-white font-bold">nuestro</span
      >
      <br />Podcast
    </p>
    <Spotify size="62" />
  </GridCard>

  <GridCard
    as="a"
    row={1}
    col={2}
    href={SITE.social_media.fb}
    class="bg-white hover:bg-orange transition duration-150 group">
    <p
      class="flex text-orange group-hover:text-white gap-2 items-center text-xl">
      +info {'>'} Facebook <Facebook size="28" />
    </p>
  </GridCard>

  <GridCard
    as="a"
    row={1}
    col={2}
    href={SITE.social_media.ig}
    class="bg-white hover:bg-yellow transition duration-150 group">
    <p
      class="flex text-yellow group-hover:text-white gap-2 items-center text-xl">
      Instagram <Instagram size="32" />
    </p>
  </GridCard>
</Grid>
