---
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<Tag extends HTMLTag> = {
  class?: string
  as?: Tag
  empty?: boolean
  row: number
  col: number
} & Polymorphic<{ as: Tag }>

const {
  class: customStyle,
  as: Element = 'section',
  empty,
  row = 1,
  col = 1,
  ...props
} = Astro.props
---

<Element
  style={{
    gridRow: `span ${row} / span ${row}`,
    gridColumn: `span ${col} / span ${col}`,
  }}
  class:list={[
    empty ? 'hidden sm:block' : '',
    customStyle,
    'w-full h-full font-bold uppercase rounded-3xl flex items-center justify-center transition-all duration-300',
  ]}
  {...props}
>
  <slot />
</Element>
