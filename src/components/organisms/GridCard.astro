---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  class?: string
  element?: string
}

const {
  class: customStyle,
  element: Element = 'section',
  ...props
} = Astro.props
---

<Element
  {...props}
  class:list={[
    customStyle,
    'w-full h-full font-bold uppercase rounded-3xl flex items-center justify-center transition-all duration-300',
  ]}
>
  <slot />
</Element>
