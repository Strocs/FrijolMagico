---
import Logo from '@components/icons/Logo.astro'
import Nav from '../molecules/Nav.astro'
---

<header
  aria-label="Frijol Mágico"
  class="w-full flex justify-center bg-p-blue fixed z-50"
>
  <div
    class="flex justify-between bg-opacity-80 items-center w-full max-w-[90rem] h-fit py-4 px-8 rounded-full transition-[background] duration-150"
  >
    <a
      href="/"
      class="hover:scale-110 hover:rotate-3 transition-transform duration-150 relative z-50"
    >
      <p class="sr-only">Ir a la página principal</p>
      <Logo /></a
    >
    <Nav />
  </div>
</header>
