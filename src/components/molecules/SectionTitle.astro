---
import type { WithLink } from '@customTypes/WithLink'
import Link from '../atoms/Link.astro'

interface Props {
  withLink?: WithLink
  class?: string
}

const { withLink, class: customClass } = Astro.props
---

<header
  class:list={[
    'flex flex-col sm:flex-row justify-between sm:items-end gap-4 w-full',
    customClass,
  ]}
>
  <h2
    class="text-2xl text-s-yellow md:text-5xl lg:text-5xl leading-none font-galindo font-normal tracking-normal max-w-xl -mb-2"
  >
    <slot />
  </h2>
  {!!withLink && <Link text={withLink.text} href={withLink.href} />}
</header>
