<header
  aria-label="Frijol Mágico"
  class="w-full font-sans sm:fixed sm:top-0 flex flex-col sm:flex-row space-y-4 sm:space-y-0 px-6 items-center justify-between py-2 bg-foreground relative z-40">
  <div class="flex space-x-6 flex-nowrap">
    <h2 class="text-background">
      <b>Próximo festival:</b>
      19 Octubre, <i>Un nuevo germinar</i> 🌱
    </h2>
    <p class="text-background">
      <b>Faltan:</b>
      <span class="font-bold text-accent" id="days-left"></span> días
    </p>
  </div>
  <a
    href="/un-nuevo-germinar"
    class="py-0.5 px-2 rounded-lg font-bold bg-gradient-to-r text-secondary-foreground from-secondary to-accent [background-size:150%] hover:bg-right transition-[background-position] duration-200">
    Conoce a lxs participantes! 👈🏾
  </a>
</header>

<script>
  const festivalDay = 19
  const oneDay = 1000 * 60 * 60 * 24
  const currentDate = new Date()
  const festivalDate = new Date(currentDate.getFullYear(), 9, festivalDay)
  const daysLeftDOM = document.getElementById('days-left') as HTMLElement
  const daysLeft = Math.round(
    (festivalDate.getTime() - currentDate.getTime()) / oneDay
  )

  // TODO: change días text when just 1 day left
  daysLeftDOM.innerText = `${daysLeft}`
</script>
