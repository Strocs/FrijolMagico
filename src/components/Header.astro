---
import NavLinks from "./NavLinks.astro";
import Facebook from "./icons/Facebook.astro";
import Instagram from "./icons/Instagram.astro";
---

<header
  aria-label="Frijol Mágico"
  class="top-0 w-full z-10 flex justify-center px-4 py-2 sm:px-8 sm:py-4"
>
  <div
    class="flex justify-between bg-opacity-80 items-center w-full max-w-[86rem] h-fit py-4 px-8 rounded-full transition-[background] duration-150"
  >
    <a
      href="/"
      class="hover:scale-110 hover:rotate-3 transition-transform duration-150"
    >
      <p class="sr-only">Ir a la página principal</p>
      <img
        src="/logo.png"
        alt="Logo Frijol Mágico"
        class="aspect-square w-10 sm:w-12"
        aria-label="Logo"
      /></a
    >
    <NavLinks />
  </div>
</header>
