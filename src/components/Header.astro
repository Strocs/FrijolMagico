<style>
  /*  
    ------------- 
       HEADER
    ------------- 
*/
  .header__container {
    position: fixed;
    top: 0;
    width: 100vw;
    z-index: 3;
    height: 10rem;
    border-bottom: solid 1px transparent;
    transition:
      background 300ms ease,
      border 300ms ease,
      height 300ms ease;
  }

  .header__main {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 16.5vw;
    z-index: 10;
    height: 10rem;
    transition: height 300ms ease;
  }

  /*  LOGOTYPE  */

  .logo__container {
    width: 16rem;
  }

  .logo__link {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
  }

  .logo__svg {
    /* width: 8rem; */
    height: 6rem;
  }

  .logo__text {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    font-size: 2.6rem;
    font-weight: 700;
    margin-left: 0.8rem;
    transition: font-size 300ms ease;
  }

  .logo__link:hover {
    text-shadow: 0.4rem 0.4rem var(--pink-normal);
    -webkit-transition: 200ms;
    -o-transition: 200ms;
    transition: 200ms;
  }

  /*  Change on scroll  */

  .header__container-bg {
    background: var(--blue-normal-opa);
    border-bottom: solid 1px white;
    height: 8rem;
    transition:
      background 300ms ease,
      border 300ms ease,
      height 300ms ease;
  }

  .header__main-bg {
    transition: height 300ms ease;
    height: 8rem;
  }

  .logo__text-bg {
    font-size: 2.3rem;
    transition: font-size 300ms ease;
  }

  /* TOGGLE BUTTON  */

  .nav__toggle {
    cursor: pointer;
    padding: 1.5rem 0.5rem;
  }

  .nav__toggle span,
  .nav__toggle span::before,
  .nav__toggle span::after {
    display: block;
    background: white;
    height: 2px;
    width: 3rem;
    border-radius: 2px;
    position: relative;
  }

  .nav__toggle span::after,
  .nav__toggle span::before {
    content: "";
    position: absolute;
  }

  .nav__toggle span::after {
    top: 7px;
  }

  .nav__toggle span::before {
    bottom: 7px;
  }

  .nav__toggle:hover > span,
  .nav__toggle:hover > span::after,
  .nav__toggle:hover > span::before {
    box-shadow: 0.4rem 0.4rem var(--pink-normal);
    transition: 200ms;
  }

  .nav__input {
    display: none;
  }

  .nav__input:checked ~ .nav__toggle span {
    transform: rotate(-45deg);
    box-shadow: none;
    height: 3px;
    width: 3rem;
    border-radius: 2px;
  }

  .nav__input:checked ~ .nav__toggle span::before {
    bottom: 0;
    transform: rotate(90deg);
    box-shadow: none;
    height: 3px;
    width: 3rem;
    border-radius: 2px;
  }

  .nav__input:checked ~ .nav__toggle span::after {
    top: 0;
    opacity: 0;
  }

  /*  
    ------------- 
         NAV
    ------------- 
*/

  .nav__container {
    position: fixed;
    top: 0;
    background: var(--blue-normal-opa);
    width: 100%;
    height: 100vh;
    transition: margin-top 800ms ease;
    z-index: 5;
    border-bottom: 1px solid white;
  }

  .nav__general {
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    padding: 8vw 0;
    margin: 0;
    height: 100%;
  }

  .nav__li {
    margin-bottom: 3rem;
  }

  .nav__a {
    display: inline-block;
    font-family: var(--ff-title-sketch);
    font-size: 4rem;
  }

  .nav__a:hover {
    text-shadow: 0.4rem 0.4rem var(--pink-normal);
    -webkit-transition: text-shadow 100ms;
    -o-transition: text-shadow 100ms;
    transition: text-shadow 100ms;
  }
</style>

<script>
  const navBtn = document.getElementsByClassName(
    "nav__toggle"
  )[0] as HTMLElement;
  const navShow = document.getElementsByClassName(
    "nav__container"
  )[0] as HTMLElement;

  navBtn.onclick = () => {
    let margin = navShow.style.marginTop;
    margin == "-100vh"
      ? (navShow.style.marginTop = "0vh")
      : (navShow.style.marginTop = "-100vh");
  };

  window.onscroll = function () {
    let top = window.scrollY;
    let header = document.getElementsByClassName("header__container")[0];
    let headerSize = document.getElementsByClassName("header__main")[0];
    let logoText = document.getElementsByClassName("logo__text")[0];

    top > 0
      ? (header.classList.add("header__container-bg"),
        headerSize.classList.add("header__main-bg"),
        logoText.classList.add("logo__text-bg"))
      : (header.classList.remove("header__container-bg"),
        headerSize.classList.remove("header__main-bg"),
        logoText.classList.remove("logo__text-bg"));
  };
</script>
