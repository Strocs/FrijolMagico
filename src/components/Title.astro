---
interface Props {
  size?: "base" | "sm";
}
const { size = "base" } = Astro.props;

const sizes = {
  base: {
    h1: "pb-20 text-xl md:text-2xl lg:text-xl",
    span: "text-6xl md:text-9xl xl:text-[12rem] 2xl:text-[16rem] -mt-4 md:-mt-6",
  },
  sm: {
    h1: "pb-20 text-sm sm:text-lg",
    span: "text-5xl md:text-8xl xl:text-[10rem] 2xl:text-[12rem] -mt-4 md:-mt-6",
  },
};
---

<h1
  class:list={["mx-auto w-fit font-extralight tracking-widest", sizes[size].h1]}
>
  Asociación Cultural
  <span
    class:list={[
      "pb-4 pt-3 block font-thickedy tracking-tight text-transparent bg-clip-text bg-[url(/m5.webp)] bg-top font-black [text-shadow:0_0_.4rem_#ffcd6950] sm:[text-shadow:0_0_2rem_#ffcd6950]",
      sizes[size].span,
    ]}>Frijol Mágico</span
  >
</h1>

<style>
  span {
    animation: paper 5s steps(5) infinite;
  }
  @keyframes paper {
    to {
      background-position: bottom;
    }
  }
</style>
