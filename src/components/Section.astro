---
import Link from './Link.astro'

const { sectionName, title, link } = Astro.props
---

<section>
	<div>
		<h2>{title}</h2>
		<Link text={`Ir a ${sectionName}`} href={'/' + link} />
	</div>
	<div>
		<slot />
	</div>
</section>

<style>
	section {
		height: fit-content;
		width: 100%;
		max-width: 106rem;
		padding: 10rem 0;
		margin: auto;
		display: grid;
		gap: 2rem;
	}

	div {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	h2 {
		font-size: 3rem;
		line-height: 3rem;
	}

	@media (min-width: 640px) {
		section {
		gap: 4rem;
	}
		h2 {
			font-size: 4.8rem;
		}
	}
</style>
