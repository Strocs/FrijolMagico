---
import Link from "./Link.astro";

interface Props {
  name: string;
  title: string;
  class?: string;
  href?: string;
}

const { name, title, class: customClass, href } = Astro.props;

const lowerHref = href ? href : `/${name.toLowerCase()}`;
---

<section class="h-fit w-full grid gap-4 max-w-5xl mx-auto">
  <div class="flex justify-between items-end px-4 sm:px-8 gap-2 w-full">
    <h2
      class="text-2xl sm:text-4xl lg:text-5xl leading-none font-galindo font-normal tracking-normal max-w-xl -mb-2"
    >
      {title}
    </h2>
    <Link text={`Ir a ${name}`} href={lowerHref} />
  </div>
  <div class:list={["pl-6 pr-4 sm:pl-10 sm:pr-8 w-full relative", customClass]}>
    <slot />
  </div>
  <slot name="slider" />
</section>
