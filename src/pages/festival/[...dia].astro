<script is:inline>
  var tag = document.createElement("script");

  tag.src = "https://www.youtube.com/iframe_api";
  var firstScriptTag = document.getElementsByTagName("script")[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

  const videoId = document
    .getElementById("stream__youtube")
    .getAttribute("data-videoId");

  let player;
  function onYouTubePlayerAPIReady() {
    player = new YT.Player("youtube__embed", {
      videoId,
      events: {
        onReady: onPlayerReady,
        onStateChange: getDuration,
      },
      playerVars: {
        start: 0,
        modestbranding: 1,
        showinfo: 0,
        rel: 0,
        enablejsapi: 1,
      },
    });
  }

  let timeoutIDList = [];

  function getDuration(event) {
    timeoutIDList.forEach((timeout) => {
      if (typeof timeout === "number") {
        window.clearTimeout(timeout);
      }
    });
    timeoutIDList = [];
    currentArtist(event.target.getCurrentTime());
  }

  function onPlayerReady(event) {
    setTimeout(() => {
      event.target.playVideo();
      document.getElementById("youtube__embed").removeAttribute("style");
    }, 10000);
  }

  const schedule = document.getElementsByClassName("schedule");
  let artistWrap = document.getElementsByClassName("schedule__artist");
  let artist = document.getElementsByClassName("artist");

  // SELECT CURRENT ARTIST
  const currentArtist = (currentTime) => {
    const scheduleTimer = ({ current, timer, scroll }) => {
      if (timer < 0) timer = 0;

      return setTimeout(function () {
        Array.from(artistWrap).forEach((artist, i) => {
          artist.removeAttribute("id");
          artist.firstElementChild.removeAttribute("id");
        });
        artistWrap[current].setAttribute("id", "schedule__artist-selected");
        artist[current].setAttribute("id", "artist-selected");
        schedule[0].scrollTop = scroll;
      }, timer);
    };

    Array.from(artistWrap).map((artistSchedule, i) => {
      let scroll = 0;
      scroll = scroll === 700 ? 0 : 100 * i;
      let timer =
        (+artistSchedule.firstElementChild.getAttribute("data-startIn") * 60 -
          currentTime) *
        1000;

      let timeoutID = scheduleTimer({
        current: i,
        timer,
        scroll,
      });

      if (!timeoutID) return;
      timeoutIDList.push(timeoutID);
    });
  };
</script>

<script>
  import "node_modules/simplycountdown.js/dist/simplyCountdown.min.js";

  const count = document.getElementById("countdown") as HTMLElement;
  const change = document.getElementsByClassName("change")[0] as HTMLElement;
  const headerText = document.querySelector(".header__text") as HTMLElement;

  const changeCount = () => {
    headerText.innerHTML = "¡Bienvenidxs al Festival Frijol Mágico 2021!";
    count.style.display = "none";
    change.style.display = "flex";
  };

  const year = new Date().getFullYear();
  const month = new Date().getMonth();
  const day = new Date().getDate();
  const hours = new Date().getHours();
  const minutes = new Date().getMinutes();
  const seconds = new Date().getSeconds();

  simplyCountdown("#countdown", {
    year: year, //
    month: month + 1,
    day: day,
    hours: hours,
    minutes: minutes,
    seconds: seconds + 12,
    words: {
      days: { singular: "Día", plural: "Días" },
      hours: { singular: "Hora", plural: "Horas" },
      minutes: { singular: "Minuto", plural: "Minutos" },
      seconds: { singular: "Segundo", plural: "Segundos" },
    },

    plural: true,
    inline: false,
    inlineClass: "simply-countdown-inline",

    enableUtc: false,
    onEnd: function () {
      changeCount();
    },

    refresh: 1000,
    sectionClass: "simply-section",
    amountClass: "simply-amount",
    wordClass: "simply-word",
    zeroPad: false,
    countUp: false,
  });
</script>

