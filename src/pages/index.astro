---
import PodcastCard from "@components/PodcastCard.astro";
import Section from "@components/Section.astro";
import Slider from "@components/Slider.astro";
import Title from "@components/Title.astro";
import Layout from "@layouts/Layout.astro";
import { podcastData } from "@data/podcasts.data";
import Card from "@components/Card.astro";

const lastPodcast = podcastData[podcastData.length - 1];
---

<Layout>
  <main class="w-full h-full pt-4 pb-40">
    <Title />
    <article class="space-y-20 sm:space-y-32" aria-label="Secciones">
      <Section name="Festival 2024" title="Próximo Festival">
        <Card
          Element="a"
          href="/2024/convocatoria"
          class="bg-white w-full h-60"
        />
      </Section>
      <Slider slot="slider" />
      <Section name="Festivales" title="Revive: Festival Frijol Mágico 2021">
        <div class="flex gap-8">
          <Card
            Element="a"
            href="2021/dia-1"
            class="w-1/3 h-60 bg-[url(dia1.webp)] bg-[77%_50%] [background-size:150%]"
          />
          <Card
            Element="a"
            href="2021/dia-2"
            class="w-1/3 h-60 bg-[url(dia2.webp)] bg-[77%_50%] [background-size:150%]"
          />
          <Card
            Element="a"
            href="2021/dia-3"
            class="w-1/3 h-60 bg-[url(dia3.webp)] bg-[74%_77%] [background-size:150%]"
          />
        </div>
      </Section>
      <Section name="Podcasts" title="Último Podcast">
        <Card>
          <PodcastCard podcastId={lastPodcast.id} />
        </Card>
      </Section>
      <Section name="Talleres" title="Talleres">
        <Card class="bg-white w-full h-60" />
      </Section>
    </article>
  </main>
</Layout>
