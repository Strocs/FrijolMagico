---
import Facebook from '@components/icons/Facebook.astro'
import Instagram from '@components/icons/Instagram.astro'
import Spotify from '@components/icons/Spotify.astro'
import GridCard from '@components/organisms/GridCard.astro'
import Layout from '@layouts/Layout.astro'
import Main from '@layouts/Main.astro'
import { Image } from 'astro:assets'

import Logo from '../../public/logotipo_mono.png'
import { CALLS_INFO } from '@data/CALLS_INFO'
import { SITE } from '@data/SITE'
---

<Layout title="Convocatoria Frijol Mágico 2024 - Un nuevo germinar">
  <Main
    class="grid sm:grid-cols-12 sm:grid-rows-[repeat(6,minmax(0,80px))] grid-cols-2 place-content-center gap-4 max-w-4xl mx-auto relative"
  >
    <Image
      src={Logo}
      class="absolute -z-10 sm:w-40 w-32 aspect-auto -top-24 sm:-top-28 left-12 opacity-90"
      alt="Logo Frijol Mágico"
      loading="eager"
    />

    <!-- Full Column -->
    <GridCard
      class="bg-light-green col-span-full sm:row-span-4 sm:col-span-3 text-white bg-[url(/enredadera.png)] [background-size:150%] sm:bg-cover bg-no-repeat sm:bg-[60%_0] bg-[0%_48%] sm:hover:bg-[65%_10px] px-4 py-4 sm:py-0"
    >
      <h2 class="text-2xl sm:text-4xl text-center leading-6 sm:leading-9">
        <span
          class="text-lg sm:text-xl block leading-4 sm:leading-5 font-bold mb-1 text-yellow"
          >Nueva Convocatoria</span
        > Frijol Mágico
        <span class="text-yellow font-black">2024</span>
      </h2>
    </GridCard>
    <!-- Header -->
    <GridCard
      class="bg-dark-green text-white col-span-full sm:col-span-9 text-xl sm:text-3xl bg-[url(/enredadera.png)] sm:bg-cover bg-no-repeat sm:bg-[0_70%] bg-[80%_80%] flex-col p-4"
    >
      <h1 class="font-black text-center">Festival Frijol Mágico</h1>
      <h2 class="normal-case text-lg font-medium text-center leading-5">
        Un nuevo germinar
      </h2>
    </GridCard>
    <!-- First Row -->
    <GridCard
      class="sm:col-span-3 sm:row-span-2 text-orange justify-end text-end"
    >
      <p class="text-xl sm:text-2xl leading-6 font-black">
        Ilustración <span class="text-light-green">Narrativa Gráfica</span> Manualidades
      </p>
    </GridCard>
    <GridCard
      class="bg-yellow sm:col-span-6 sm:row-span-2 text-light-green bg-[url(/mano.png)] sm:[background-size:110%] [background-size:240%] bg-no-repeat sm:bg-[90px_66%] bg-[43%_70%] sm:hover:bg-[90px_75%] p-4 sm:p-8 !justify-start"
    >
      <div class="grid gap-4">
        <a
          target="_blank"
          href={CALLS_INFO.ilustracion.bases}
          class="bg-white hover:bg-dark-green hover:text-white transition duration-150 rounded-xl px-6 py-2 sm:py-4 flex items-center leading-4"
          >Lee las bases</a
        >
        <a
          target="_blank"
          href={CALLS_INFO.ilustracion.form}
          class="bg-white hover:bg-dark-green hover:text-white transition duration-150 rounded-xl px-6 py-2 sm:py-4 flex items-center leading-4"
          >Postula aquí</a
        >
      </div>
    </GridCard>
    <!-- Second Row -->
    <GridCard
      class="bg-orange sm:row-span-2 sm:col-span-6 text-light-green bg-[url(/frijol.png)] sm:bg-contain [background-size:180%] bg-no-repeat bg-[50%_20%] sm:bg-[10%] sm:hover:bg-[20%_20%] !justify-end sm:p-8 p-4"
    >
      <div class="grid gap-4">
        <a
          target="_blank"
          href={CALLS_INFO.musica.bases}
          class="bg-white hover:bg-dark-green hover:text-white transition duration-150 rounded-xl px-6 py-2 sm:py-4 flex items-center leading-4 text-end"
          >Lee las bases</a
        >
        <a
          target="_blank"
          href={CALLS_INFO.musica.form}
          class="bg-white hover:bg-dark-green hover:text-white transition duration-150 rounded-xl px-6 py-2 sm:py-4 flex items-center leading-4 text-end"
          >Postula aquí</a
        >
      </div>
    </GridCard>
    <GridCard class="sm:col-span-3 sm:row-span-2 text-orange justify-start">
      <p class="text-xl sm:text-2xl leading-6 font-black">
        Bandas y <span class="text-light-green">Solistas</span>
      </p>
    </GridCard>
    <!-- Footer -->
    <GridCard
      element="a"
      href={SITE.podcast}
      class="bg-white sm:bg-yellow col-span-1 row-span-2 py-4 sm:col-span-3 sm:row-span-2 text-center flex-col gap-2 hover:gap-0 text-yellow sm:text-white"
    >
      <p class="leading-6 text-2xl text-yellow sm:text-orange font-black">
        Escucha <span class="text-light-green sm:text-white font-bold"
          >nuestro</span
        > Podcast
      </p>
      <Spotify size="42" />
    </GridCard>
    <GridCard class="hidden sm:flex sm:col-span-3 text-yellow justify-end">
      <p class="text-xl font-black text-end">Redes Sociales</p>
    </GridCard>
    <GridCard
      element="a"
      href={SITE.social_media.ig}
      class="bg-white text-light-green hover:bg-light-green hover:text-white transition duration-150 sm:col-span-3 group"
    >
      <p class="flex gap-2 items-center">Instagram <Instagram size="28" /></p>
    </GridCard>
    <GridCard
      element="a"
      href={SITE.social_media.fb}
      class="bg-white text-orange sm:col-span-3 hover:bg-orange hover:text-white transition duration-150"
    >
      <p class="flex gap-2 items-center">Facebook <Facebook /></p>
    </GridCard>
  </Main>
</Layout>
